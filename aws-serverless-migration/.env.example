# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here

# AI Service API Keys
OPENAI_API_KEY=sk-your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key
XAI_API_KEY=your-xai-api-key

# Application Configuration
PORT=3000
NODEENV=development

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecommerce
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_SSL=false
DB_URL=postgresql://postgres:password@localhost:5432/ecommerce
DB_FORCE_SYNC=false

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ecommerce

# Azure Storage Configuration
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=product-images
AZURE_USE_SAS_URLS=true
AZURE_SAS_EXPIRY_HOURS=8760

# Production Database Configuration (for deployment)
AZURE_DB_HOST=your-production-db-host
AZURE_DB_PORT=5432
AZURE_DB_NAME=postgres
AZURE_DB_USER=your-db-user
AZURE_DB_PASSWORD=your-db-password
AZURE_DB_SSL=true
AZURE_DB_URL=postgresql://user:password@host:5432/database
AZURE_DB_FORCE_SYNC=false

# Production MongoDB (for deployment)
SERVER_MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/database