JWT_SECRET=SECRET_KEY
OPENAI_API_KEY=Your-OpenAI-API-Key-Here
GEMINI_API_KEY=Your-Gemini-API-Key-Here
PORT=3000
DB_PASSWORD=Your-Database-Password-Here
DB_USER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=E-Commerce
DB_SSL=false
MONGODB_URI=mongodb://username:password@host/ecommerce
DB_FORCE_SYNC=false
NODEENV=development

# 图片上传配置
UPLOAD_STRATEGY=azure # azure | aws | local
UPLOAD_DIR=../uploads # 本地存储时使用

# Azure Blob Storage 配置（推荐）
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_CONTAINER_NAME=product-images
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net

# Azure 访问配置
AZURE_USE_SAS_URLS=true # true=使用SAS令牌(私有), false=公共访问
AZURE_SAS_EXPIRY_HOURS=8760 # SAS令牌有效期(小时，默认1年)

# Azure CDN 配置（可选，用于加速）
AZURE_CDN_ENDPOINT=https://your-cdn-endpoint.azureedge.net

# AWS S3 配置（备选方案）
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_CLOUDFRONT_URL=https://your-cloudfront-domain.com